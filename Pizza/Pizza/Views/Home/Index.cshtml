<div page-model="@Model.PagingInfo" page-action="Index"
     page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>

@functions {
    Product selectedProduct;
    IEnumerable<PriceSize> priceSizeProduct;
    IStoreRepository repository;

    Product SelectProduct(long productId)
    {
        selectedProduct = repository.Products.First(x => x.ProductID == productId);
        priceSizeProduct = repository.PriceSizes.Where(x => x.ProductID == productId);
        return selectedProduct;
    }
}
