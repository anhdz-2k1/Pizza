@model ProductsListViewModel

@foreach (var p in Model.Products)
{
    <div class="card card-outline-primary m-1 p-1 product">
        <div class="bg-faded p-1">
            <h4>@p.Name - @p.Category</h4>
            <img src="@p.Img" />
            @foreach (var q in Model.PriceSizes)
            {
                if (q.ProductID == p.ProductID)
                {
                    <h1>@q.Size</h1>
                    <h1>@q.Price</h1>
                }
            }

        </div>
        <div class="card-text p-1">
            @p.Description
            <button onclick="@SelectProduct(p.ProductID)" data-toggle="modal" data-target="#productModal" type="submit" class="btn btn-success btn-sm pull-right" style="float:right">
                Add To Cart
            </button>
        </div>
    </div>
    @*<partial name="ProductSummary" model="p" />*@
}
